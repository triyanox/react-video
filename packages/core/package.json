    "@radix-ui/react-slider": "^1.1.2",
    "clsx": "^2.0.0",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "tailwind-merge": "^2.1.0",
    "typescript": "4.9.5"
  },
  "publishConfig": {
    "access": "public"
  },
  "devDependencies": {
    "@repo/typescript-config": "workspace:*",
    "@types/react": "^18.2.45",
    "@types/react-dom": "18.2.7",
    "autoprefixer": "^10.4.16",
    "eslint": "^7.32.0",
    "framer-motion": "^10.16.16",
    "postcss": "^8.4.32",
    "react": "^18.2.0",
    "tailwindcss": "^3.3.6",
